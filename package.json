{
  "name": "php",
  "description": "Allows you to use PHP as a view engine for Express applications.",
  "author": "Roosevelt Framework Team <rooseveltframework@gmail.com>",
  "contributors": [
    {
      "name": "Contributors",
      "url": "https://github.com/rooseveltframework/express-php-view-engine/graphs/contributors"
    }
  ],
  "version": "1.0.1",
  "files": [
    "index.js",
    "loader.php"
  ],
  "homepage": "https://github.com/rooseveltframework/express-php-view-engine",
  "license": "CC-BY-4.0",
  "main": "index.js",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=12.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "circular": "~1.0.5",
    "execa": "~5.0.0"
  },
  "devDependencies": {
    "ava": "~3.14.0",
    "c8": "~7.3.5",
    "codecov": "~3.8.1",
    "eslint": "~7.18.0",
    "eslint-plugin-ava": "~11.0.0",
    "express": "~4.17.1",
    "husky": "~4.3.0",
    "lint-staged": "~10.5.1",
    "standard": "~16.0.1",
    "supertest": "~6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rooseveltframework/express-php-view-engine.git"
  },
  "keywords": [
    "Express",
    "Express.js",
    "php",
    "view engine"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/no-only-test": "error"
    }
  },
  "scripts": {
    "codecov": "codecov",
    "coverage": "c8 --reporter=text --reporter=lcov ava",
    "lint": "standard && eslint test/test.js",
    "test": "ava"
  },
  "lint-staged": {
    "*.js": "standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && eslint test/test.js"
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/kethinov"
  }
}
